<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".signup">

    <TextView
        android:id="@+id/createAccountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="83dp"
        android:text="@string/createAccount"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:id="@+id/userGender"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_below="@+id/userBirthday"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorEditText"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Spinner
                android:id="@+id/userGenderSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/colorEditText"
                android:ems="10"
                android:inputType="text"
                android:textColorHint="@color/colorBlack"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/userEmail"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="61dp"
        app:cardBackgroundColor="@color/colorEditText"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:background="@color/colorEditText"
                android:drawableStart="@drawable/email_image"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#000000"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/userPassword"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_below="@+id/userEmail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorEditText"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/userPassword">

            <EditText
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/colorEditText"
                android:drawableStart="@drawable/lock_image"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:textColorHint="@color/colorBlack"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/userBirthday"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_below="@+id/userName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorEditText"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/userBirthdayText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorEditText"
                android:drawableStart="@drawable/calendar_image"
                android:drawablePadding="10dp"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/Birthday"
                android:inputType="date"
                android:onClick="onClickPickDate"
                android:textColorHint="@color/colorBlack"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/userName"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createAccountTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="58dp"
        app:cardBackgroundColor="@color/colorEditText"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/userNameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorEditText"
                android:drawableStart="@drawable/user_image"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/UserName"
                android:inputType="textPersonName"
                android:textColorHint="@color/colorBlack"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPassword"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:onClick="onClickSignUp"
        app:cardBackgroundColor="@color/doneButton"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TextCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/createMyAccount"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>